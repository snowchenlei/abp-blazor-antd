@typeparam TEntity
@typeparam TResourceType
@using Snow.Aba.AntdBlazorUI
@using Volo.Abp.Localization

@if (PropertyInfo != null && Entity != null)
{
    <FormItem Label="@PropertyInfo.GetLocalizedDisplayName(StringLocalizerFactory)" >
        @if(@PropertyInfo.GetTextRole() == "Password")
        {
            <InputPassword @bind-Value="@Value" Placeholder="@PropertyInfo.GetLocalizedDisplayName(StringLocalizerFactory)"/>
        }
        else
        {
        <Input @bind-Value="@Value" Placeholder="@PropertyInfo.GetLocalizedDisplayName(StringLocalizerFactory)"/>
        }
    </FormItem>
}