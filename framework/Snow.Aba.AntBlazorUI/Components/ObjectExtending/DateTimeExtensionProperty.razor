@typeparam TEntity
@typeparam TResourceType
@using Volo.Abp.BlazoriseUI
@using Volo.Abp.Localization
@using Volo.Abp.ObjectExtending

@if (PropertyInfo != null && Entity != null)
{
    <FormItem Label="@PropertyInfo.GetLocalizedDisplayName(StringLocalizerFactory)">
        @if (PropertyInfo.IsDate())
        {
            <DatePicker @bind-Value="@Value" TValue="DateTime?" Picker="@DatePickerType.Date" Format="@PropertyInfo.GetDateEditInputFormatOrNull()"/>
        }
        else
        {
            <DatePicker @bind-Value="@Value" TValue="DateTime?" ShowTime="@true" Format="@PropertyInfo.GetDateEditInputFormatOrNull()"/>
        }
    </FormItem>
}
